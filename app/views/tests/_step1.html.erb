<br />
<div class="container">
  <div class="row">
      <div class="col-md-8">
        <div class="step1 row">
            <div class="app_type col-xs-2">
              <h3>Single Page</h3>
              <p>landing page</p>
              <%= f.check_box :application_type, {class: 'hidden'}, '0' %>
            </div>
            <div class="app_type col-xs-2 col-md-offset-1">
              <h3>Website</h3>
              <p>mobile + desktop</p>
              <%= f.check_box :application_type, {class: 'hidden'}, '1'%>
            </div>
            <div class="app_type col-xs-2 col-md-offset-1">
              <h3>iOS</h3>
              <p>Native app</p>
              <%= f.check_box :application_type, {class: 'hidden'}, '2'%>
            </div>
            <div class="app_type col-xs-2 col-md-offset-1">
              <h3>android</h3>
              <p>Native app</p>
              <%= f.check_box :application_type, {class: 'hidden'}, '3'%>
            </div>
          </div>

      </div>
      </br>
      <div  class="col-md-6">
          <%= select_tag('http_type',options_for_select(['http://', 'https://']))%>
          <%= f.text_field :url,class: 'url', placeholder: 'Enter the url of website'%>
          <div class="autocomp"></div>
        </div>
  </div>
</div>
